
	 body {
	margin: 0;
	padding: 0px;
	height: 100%;

	background-color: #d0e7a29c;
}

/* HEADER*/
 
header {
	margin: 0;
	/*! padding: 0px; */
	height: 100%;

	background-color: #313F4E52;
	position: absolute;
	width: 100%;
	height: 40px;
}		 

/* MAIN */

main {
margin: 80px auto;	
/*! padding: 100px; */	
width: 1000px;
height: 50%;
padding: 100px;	
position: absolute;
	
}

/* HEAD *

/*  FOTO */
img {
margin: 0;
padding: 1px;
height: 20em;
width: 17em;
border-radius: 50%;
}

.title {
margin: 5px;	
padding: 3px;	
position: absolute;
right: 20px;
border: 1px solid ;
border-radius: 50%;
z-index: 1;		
top: 20px;
}	
.title1 {
text-align: center;	
top: 340px;
margin: 5px;	
padding: 3px;	
position: absolute;
color: olive;
font-family:  Arial;
}	




/* Обработка блоков  */
p:nth-child(1n) {
  color: whitesmoke;
	background: #666DB8;
	
}

p:nth-child(2n) {
  color: darkolivegreen;
	background: #FFFEB7;
	
}

p:nth-child(3n) {
  color: green;
	background: #D6D9FF;
}

p:nth-child(4n) {
  color: darkblue;
	background: none;
	font-style: italic;
	
}

div {
line-height: 20px;	
}

/* Изменение цвета при выделении */
span::selection {
color: red;
background-color: greenyellow;
font-size: 20px;	
}
	
.par_1 {
top:10px;
left: 200px;
position: absolute;
z-index: 3;
width: 30%;
padding: 10px;
border: 2px inset #72a4bc;
	padding-left: 50px;
	padding-right: 50px;
 background: linear-gradient(to right, #F6EFD2, #CEAD78);
	border-radius: 30px;
	
}		 

.par_2 {
top:200px;
left: 30px;
position: absolute;
z-index: 1;
	width: 30%;
	border-radius: 30px;
	border: 2px dashed #33506a;
	padding: 10px;
	/*! background: -webkit-linear-gradient(0deg, rgb(152, 207, 195) 29%, rgb(86, 181, 184)); */
/*! background: -moz-linear-gradient(0deg, rgb(152, 207, 195) 29%, rgb(86, 181, 184)); */
background: linear-gradient(0deg, rgb(152, 207, 195) 29%, rgb(86, 181, 184));

}	

.par_3 {
top:330px;
left: 400px;
position: absolute;
z-index: 4;	
width: 30%;
padding-bottom: 10px;
padding-left: 50px;
	padding-right: 50px;
 background: linear-gradient(to right, #F6EFD2, #CEAD78);
	border-radius: 30px;
	border: 2px inset blue;
}	

.par_4 {
	top:500px;
/*! left: 2; */
position: absolute;
z-index: 2;	
	width: 30%;
	padding: 10px;
	/*! background: -webkit-linear-gradient(0deg, rgb(152, 207, 195) 29%, rgb(86, 181, 184)); */
/*! background: -moz-linear-gradient(0deg, rgb(152, 207, 195) 29%, rgb(86, 181, 184)); */
background: linear-gradient(0deg, rgb(152, 207, 195) 29%, rgb(86, 181, 184));
	border-radius: 30px;
	border: 2px dashed blue;	
}	

	 

/* TEXT */

p::before {
position: relative;	
content: "\2714";
color: blue;
font-size: 1.2em;
}


div.par_1::after {
content: "Абзац 1";
color: #7C7732;
font-size: 12px;
padding: 5px;
border-radius: 10px;	
background-color: yellowgreen;	
border: 1px solid blue;	
}

div.par_2::after {
content: "Абзац 2";
color: #0017A7;
font-size: 12px;
	padding: 5px;
border-radius: 10px;	
background-color: yellowgreen;	
border: 1px dashed blue;		
}

div.par_3::after {
content: "Абзац 3";
color: #335C46;
font-size: 12px;
padding: 5px;
border-radius: 10px;	
background-color: yellowgreen;
border: 3px inset yellow;		
}

div.par_4::after {
padding: 5px;
border-radius: 10px;	
background-color: yellowgreen;		
content: "Абзац 4";
color: #00A74C;
font-size: 12px;
border: 1px solid blue;		
}

span {
